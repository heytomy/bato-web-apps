    defaultHour: "07:00",
    altInput: true,
    altFormat: "d-m-Y H:i",
    dateFormat: "d-m-Y H:i",
    minDate: "today",
    disable: [
        function(date) {
            // Disable weekends (Saturday = 6, Sunday = 0)
            return (date.getDay() === 6 || date.getDay() === 0);
        }
    ],
	"locale": "fr",
});

