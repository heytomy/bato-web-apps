{% block list %}
	<div class="d-flex justify-content-center container mt-5 mb-5">
		<h1 class="font-weight-bold statut" style="font-size: 3em;">Les devis à réaliser</h1>
	</div>


	<div class="d-flex justify-content-between container flex-sm-row flex-column mb-3">

		<div class="col d-flex flex-row align-items-center">
			<button class="btn btn-secondary mx-1" id='devisTermine'>Devis réalisés</button>
			<button class="btn btn-secondary" id='devisEnCours'>Devis à réaliser</button>
		</div>

		<div class="col d-flex flex-row">
			<form method="get" class="d-flex justify-content-end col" id="search-form">
				<div class="">
					<div><input type="text" id="nom" name="nom" placeholder="Recherchez ici" class="form-control search-input mr-sm-2" aria-label="Search" autocomplete="off" spellcheck="false"></div>
				</div>
				<div class="px-2">
					<div>
						<button type="submit" id="submit" name="submit" class="btn btn-secondary">Chercher</button>
					</div>
				</div>
			</form>
		</div>
	</div>

		{% for message in app.flashes('success') %}
		<div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
			{{ message }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}

    <div class="client-container border rounded container bg-light p-2"></div>
{% endblock %}

{% block content %}
    <button class="btn btn-primary back-to-top"><i class="fa-solid fa-angles-up"></i> Retour en haut</button>
    {% include '_inc/chargementAnimation.html.twig' %}
{% endblock %}

{% block javascripts %}
