{% block search %}
    <div class="p-2 col d-flex flex-row-reverse">
            <button class="btn btn-danger ms-1" id='appelsTermine'>Appels archiv√©s</button>
            <button class="btn btn-danger" id='appelsEnCours'>Appels en cours</button>
    </div>
{% endblock %}


{% block list %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
			{{ message }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endfor %}

	<div class="d-flex justify-content-center container">
		<div class="col p-2">
			<h1 class="font-weight-bold statut" style="font-size: 3em;">Les appels en cours</h1>
		</div>
	</div>
	<div class="d-flex justify-content-between container flex-sm-row flex-column">
		<div class="col p-2"></div>
		<div class="col p-2 d-flex flex-row-reverse">
			<form method="get" class="d-flex justify-content-end col p-2" id="search-form">
				<div class="">
					<div><input type="text" id="nom" name="nom" placeholder="Recherchez ici" class="form-control search-input mr-sm-2" aria-label="Search" autocomplete="off" spellcheck="false"></div>
				</div>
				<div class="px-2">
					<div>
						<button type="submit" id="submit" name="submit" class="btn btn-outline-secondary">Submit</button>
					</div>
				</div>
			</form>
		</div>
	</div>

	<div class="client-container border rounded container bg-light p-2"></div>

{% endblock %}

{% block content %}
	<button class="btn btn-primary back-to-top">
		<i class="fa-solid fa-angles-up"></i>
		Retour en haut</button>
	{% include '_inc/chargementAnimation.html.twig' %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('appels_JS') }}
{% endblock %}
