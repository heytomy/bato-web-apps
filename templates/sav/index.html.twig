{% extends '_inc/listPage.html.twig' %}

{% block title %}SAV{% endblock %}

{% block back_button %}
    {{ path('app_dashboard') }}
{% endblock %}

{% block search %}
    {{ form_start(searchForm, {'attr': {'class': 'row col p-2', 'id': 'search-form'}}) }}
        <div class="col">
            {{ form_row(searchForm.nom) }}
        </div>
        <div class="col">
            {{ form_row(searchForm.submit) }}
        </div>
    {{ form_end(searchForm) }}
{% endblock %}

{% block list %}
    <div class="client-container border rounded container bg-light p-2"></div>
{% endblock %}

{% block content %}
    <button class="btn btn-primary back-to-top"><i class="fa-solid fa-angles-up"></i> Retour en haut</button>
    {% include '_inc/chargementAnimation.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('infiniteScroll') }}
{% endblock %}