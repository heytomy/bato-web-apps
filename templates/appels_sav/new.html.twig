{% extends '_inc/listPage.html.twig' %}

{% block back_button %}
	{{ path('app_appels_sav') }}
{% endblock %}

{% block list %}
	{{ form_start(form) }}

	<div class="row mt-3">
		<div class="col">{{ form_row(form.ID_Utilisateur) }}</div>
	</div>

	<div class="row mt-3">
		<div class="col">{{ form_row(form.client) }}</div>
	</div>

	<div class="row mt-3">
		<div class="col-md-6">{{ form_row(form.Contrats) }}</div>
		<div class="col-md-6">{{ form_row(form.Client) }}</div>
	</div>

	<div class="row mt-4">
		<div class="col-md-6">{{ form_row(form.Adr) }}</div>
		<div class="col-md-6">{{ form_row(form.CP) }}</div>
		<div class="col-md-6">{{ form_row(form.Ville) }}</div>
		<div class="col-md-6">{{ form_row(form.Tel) }}</div>
		<div class="col-md-6">{{ form_row(form.Email) }}</div>
	</div>

	<div class="row mt-4">
		<div class="col">{{ form_row(form.description) }}</div>
	</div>

	<div class="row mt-3">
		<div class="col-md-6">{{ form_row(form.rdvDate) }}</div>
		<div class="col-md-6">{{ form_row(form.rdvHeure) }}</div>
	</div>

	<div class="row mb-3 form-check">
		<div class="col">{{ form_row(form.isUrgent) }}</div>
	</div>


	<button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
	{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('appelsSAV') }}
{% endblock %}

